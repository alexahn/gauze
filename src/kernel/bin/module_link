#!/bin/zsh

if [ $# -eq 0 ]
	then
		echo "No arguments supplied"
		exit 1
fi

if [ -z "$1" ]
	then
		echo "No gauze base path argument supplied"
		exit 1
fi

if [ -z "$2" ]
	then
		echo "No gauze project path argument supplied"
		exit 1
fi

if [ -z "$3" ]
	then
		echo "No entity config file argument supplied"
		exit 1
fi

if [ -z "$4" ]
	then
		echo "No entity name argument supplied"
		exit 1
fi

gauze_root=$1
project_root=$2
config_path=$3
base=$gauze_root/kernel/src/base
staging=$gauze_root/kernel/src/staging

arg1=$(echo "$4" | node $gauze_root/kernel/bin/format_string.js lower_snake_case)
#echo "arg1: $arg1"
arg2=$(echo "$arg1" | node $gauze_root/kernel/bin/format_string.js pascal_snake_case)
#echo "arg2: $arg2"
arg3=$(echo "$arg1" | node $gauze_root/kernel/bin/format_string.js upper_snake_case)
#echo "arg3: $arg3"

# JOIN

cp $config_path $project_root/abstract/entities/$arg1.js

node $gauze_root/kernel/bin/module.js $project_root/abstract/entities/index.js join $arg1 file

node $gauze_root/kernel/bin/module.js $project_root/database/models/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/database/controllers/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/database/interfaces/graphql/entities/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/database/interfaces/graphql/mutations/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/database/interfaces/graphql/queries/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/database/interfaces/graphql/operations/index.js join $arg1 directory

node $gauze_root/kernel/bin/module.js $project_root/system/models/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/system/controllers/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/system/interfaces/graphql/mutations/index.js join $arg1 file
node $gauze_root/kernel/bin/module.js $project_root/system/interfaces/graphql/queries/index.js join $arg1 file

node $gauze_root/kernel/bin/module.js $project_root/structure/index.js join $arg1 directory
