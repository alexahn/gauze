#!/bin/zsh

if [ -z "$1" ]
  then
    echo "No gauze base path argument supplied"
    exit 1
fi

if [ -z "$2" ]
  then
    echo "No gauze project path argument supplied"
    exit 1
fi

gauze_root=$1
project_root=$2

mkdir -p $project_root
cp -r $gauze_root/src/* $project_root/

echo "Project created at $project_root"

cp $gauze_root/env/development.env example.env

echo "Example environment variable file created at $PWD/example.env"

cp $gauze_root/gauze/entity.js example.js

echo "Example entity definition file created at $PWD/example.js"

