{
	"name": "gauze",
	"version": "0.0.1",
	"description": "graphql server framework",
	"engines": {
		"node": "21.7.3"
	},
	"main": "src/index.js",
	"bin": "./src/command/gauze.js",
	"scripts": {
		"test": "LOG_LEVEL_MINIMUM=4 node test",
		"gauze": "./src/command/gauze.js",
		"start": "node --watch-path=./src ./src/command/gauze.js run server --port 4000",
		"start-graphiql": "/bin/zsh -c \"npm run start-graphiql-database & ; npm run start-graphiql-system & ; npm run start-graphiql-environment & ; wait\"",
		"start-graphiql-database": "npx ruru -SP -p 4001 -e http://localhost:4000/database/graphql",
		"start-graphiql-system": "npx ruru -SP -p 4002 -e http://localhost:4000/system/graphql",
		"start-graphiql-environment": "npx ruru -SP -p 4003 -e http://localhost:4000/environment/graphql",
		"start-ui": "/bin/zsh -c \"npm run watch-ui-env & ; npm run serve-ui & ; wait\"",
		"build-ui": "./node_modules/.bin/esbuild ./src/kernel/applications/gauze/src/index.jsx --outfile=./src/kernel/applications/gauze/build/index.js --bundle --metafile=meta.json",
		"build-ui-env": "node ./src/kernel/applications/gauze/build.js",
		"watch-ui": "./node_modules/.bin/esbuild ./src/kernel/applications/gauze/src/index.jsx --outfile=./src/kernel/applications/gauze/build/index.js --bundle --sourcemap --watch=forever",
		"watch-ui-env": "node ./src/kernel/applications/gauze/watch.js",
		"serve-ui": "./node_modules/.bin/http-server ./src/kernel/applications/gauze/build -c-1 --port 3000"
	},
	"author": "Alex Ahn",
	"devDependencies": {
		"@eslint/js": "^9.2.0",
		"esbuild": "^0.25.6",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.34.1",
		"globals": "^15.2.0",
		"http-server": "^14.1.1",
		"prettier": "3.2.5",
		"ruru": "^2.0.0-beta.11",
		"typescript": "^5.4.5"
	},
	"type": "module",
	"dependencies": {
		"@koa/router": "^13.1.1",
		"@radix-ui/react-icons": "^1.3.0",
		"better-sqlite3": "^9.5.0",
		"dotenv": "^16.4.5",
		"find-config": "^1.0.0",
		"graphql": "^16.8.1",
		"jose": "^5.2.4",
		"knex": "^3.1.0",
		"koa": "^3.0.0",
		"koa-body": "^6.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-redux": "^9.1.2",
		"redux": "^5.0.1",
		"reselect": "^5.1.0",
		"router5": "^8.0.1",
		"router5-plugin-browser": "^8.0.1",
		"tachyons": "^4.12.0",
		"uuid": "^9.0.1",
		"yargs": "^17.7.2"
	}
}
